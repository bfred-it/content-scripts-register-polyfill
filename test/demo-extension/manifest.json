{
	"name": "content-scripts-register-polyfill",
	"version": "0.0.0",
	"manifest_version": 2,
	"permissions": [
		"https://www.google.com/*",
		"http://localhost/*"
	],
	"browser_action": {
		"default_title": "Make this page red"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.google.com/*"
			],
			"js": [
				"static.js"
			],
			"css": [
				"static.css"
			]
		},
		{
			"all_frames": true,
			"matches": [
				"http://localhost/"
			],
			"js": [
				"static.js"
			],
			"css": [
				"static.css"
			]
		}
	]
}
